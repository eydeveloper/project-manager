{% extends 'base.html.twig' %}

{% trans_default_domain 'app_work_members' %}

{% block title %}{{ 'Members'|trans }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">{{ 'Home'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work') }}">{{ 'Work'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.members') }}">{{ 'Members'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.members.show', {'id': member.id}) }}">{{ member.name.full }}</a></li>
        <li class="breadcrumb-item active">{{ 'Move'|trans }}</li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/work/members/_tabs.html.twig') }}

    <div class="card">
        <div class="card-body">

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">{{ 'Move'|trans }}</button>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
