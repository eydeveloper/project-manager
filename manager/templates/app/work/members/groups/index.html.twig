{% extends 'base.html.twig' %}

{% trans_default_domain 'app_work_members' %}

{% block title %}{{ 'Groups'|trans }}{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">{{ 'Home'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work') }}">{{ 'Work'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.members') }}">{{ 'Members'|trans }}</a></li>
        <li class="breadcrumb-item active">{{ 'Groups'|trans }}</li>
    </ol>
{% endblock %}

{% block body %}

    {{ include('app/work/members/groups/_tabs.html.twig') }}

    <div class="controls">
        <a href="{{ path('work.members.groups.create') }}" class="btn btn-success">{{ 'Add Group'|trans }}</a>
    </div>

    <div class="box">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'Members'|trans }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% set token = csrf_token('delete') %}
                {% for group in groups %}
                    <tr>
                        <td>
                            {% if group.members %}
                                <a href="{{ path('work.members', {'form': {'group': group.id}}) }}">{{ group.name }}</a>
                            {% else %}
                                {{ group.name }}
                            {% endif %}
                        </td>
                        <td>{{ group.members }}</td>
                        <td>
                            <div class="d-flex flex-row">
                                <a href="{{ path('work.members.groups.edit', {'id': group.id}) }}" class="btn btn-sm btn-primary mr-1"><span class="fa fa-pencil"></span></a>
                                <form action="{{ path('work.members.groups.delete', {'id': group.id}) }}" method="post" onsubmit="return confirm('{{ 'Are you sure?'|trans }}')">
                                    <input type="hidden" name="token" value="{{ token }}" />
                                    <button type="submit" class="btn btn-sm btn-danger"><span class="fa fa-trash"></span></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}