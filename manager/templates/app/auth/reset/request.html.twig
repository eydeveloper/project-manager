{% extends 'auth.html.twig' %}
{% trans_default_domain 'app_auth_reset_request' %}

{% block title %}Password Reset{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {% include '_flashes.html.twig' %}

                        <h1>{{ 'Password Reset'|trans }}</h1>

                        {{ form_start(form) }}

                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Email'|trans}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <button type="submit" class="btn btn-block btn-success">{{ 'Reset Password'|trans }}</button>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
