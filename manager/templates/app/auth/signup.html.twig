{% extends 'auth.html.twig' %}

{% block title %}Symfony - Регистрация{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <div class="card-body p-4">
                        {% include '_flashes.html.twig' %}
                        <h1>Регистрация</h1>
                        <p class="text-muted">Создайте свой аккаунт</p>
                        {{ form_start(form) }}
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">@</span>
                            </div>
                            {{ form_widget(form.email, {'attr': {'placeholder': 'Электронная почта'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-lock"></i>
                                </span>
                            </div>
                            {{ form_widget(form.password, {'attr': {'placeholder': 'Пароль'}}) }}
                            {{ form_errors(form.password) }}
                        </div>
                        <button type="submit" class="btn btn-block btn-success">Создать аккаунт</button>
                        {{ form_end(form) }}
                    </div>
                    <div class="card-footer p-4">
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-block btn-facebook" href="{{ path('oauth.facebook') }}">
                                    <span>Войти через Facebook</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}