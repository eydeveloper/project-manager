{% extends 'base.html.twig' %}

{% block title %}Смена электронной почты{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('home') }}">Главная</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('profile') }}">Профиль</a>
        </li>
        <li class="breadcrumb-item active">Смена электронной почты</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">@</span>
                </div>
                {{ form_widget(form.email, {'attr': {'placeholder': 'Новая электронная почта'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <button type="submit" class="btn btn-success">Отправить письмо</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}